<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wordle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@drawable/back_word</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Wordle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Wordle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Wordle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="not_in_word_list">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/birghter_dark</item>
        <item name="stTextSize">25sp</item>

        <item name="stSolidBackground">true</item>
        <item name="stColorBackground">#FAE52E</item>

        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/birghter_dark</item>
        <item name="stRadius">3dp</item>

        <item name="stIconStart">@drawable/ic_baseline_cancel_24</item>
        <item name="stGravity">center</item> top or center
    </style>

    <style name="the_word">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/birghter_dark</item>
        <item name="stTextSize">25sp</item>

        <item name="stSolidBackground">true</item>
        <item name="stColorBackground">@color/green</item>

        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/birghter_dark</item>
        <item name="stRadius">3dp</item>

        <item name="stGravity">center</item> top or center
    </style>

    <style name="finish_the_word">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/birghter_dark</item>
        <item name="stTextSize">25sp</item>

        <item name="stSolidBackground">true</item>
        <item name="stColorBackground">#FAE52E</item>

        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/birghter_dark</item>
        <item name="stRadius">3dp</item>

        <item name="stIconStart">@drawable/ic_baseline_edit_24</item>

        <item name="stGravity">center</item> top or center
    </style>

    <style name="you_win">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/birghter_dark</item>
        <item name="stTextSize">25sp</item>

        <item name="stSolidBackground">true</item>
        <item name="stColorBackground">@color/green</item>

        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/birghter_dark</item>
        <item name="stRadius">3dp</item>

        <item name="stIconStart">@drawable/ic_baseline_check_circle_outline_24</item>

        <item name="stGravity">center</item> top or center
    </style>
</resources>