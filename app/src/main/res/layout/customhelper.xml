<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="355dp"
    android:layout_height="595dp"
    android:background="#232323"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_closehelper"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circlebackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_howtoplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="HOW TO PLAY"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_ins1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:text="Guess the WORDLE in six tries."
        android:textColor="@color/white"
        android:textSize="15dp"

        app:layout_constraintTop_toBottomOf="@id/tv_howtoplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_ins2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Each guess must be a valid five-letter word. Hit the enter button to submit."
        android:textColor="@color/white"
        android:textSize="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ins1"/>

    <TextView
        android:id="@+id/tv_ins3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="After each guess, the color of the tiles will change to show how close your guess was to the word."
        android:textColor="@color/white"
        android:textSize="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ins2"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"

        android:background="#484C49"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ins3" />

    <TextView
        android:id="@+id/tv_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="EXAMPLES"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"/>

    <TextView
        android:id="@+id/tv_box11"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_marginTop="16dp"

        android:gravity="center"
        android:text="W"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_example"/>

    <TextView
        android:id="@+id/tv_box12"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="E"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box11"
        app:layout_constraintTop_toBottomOf="@id/tv_example"/>

    <TextView
        android:id="@+id/tv_box13"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box12"
        app:layout_constraintTop_toBottomOf="@id/tv_example"/>

    <TextView
        android:id="@+id/tv_box14"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="R"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box13"
        app:layout_constraintTop_toBottomOf="@id/tv_example"/>

    <TextView
        android:id="@+id/tv_box15"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="Y"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box14"
        app:layout_constraintTop_toBottomOf="@id/tv_example"/>

    <TextView
        android:id="@+id/tv_com1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="The letter W is in the word and in the correct spot."
        android:textColor="@color/white"
        android:textSize="15dp"

        app:layout_constraintTop_toBottomOf="@id/tv_box11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_box31"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"

        android:gravity="center"
        android:text="V"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_com2"/>

    <TextView
        android:id="@+id/tv_box32"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box31"
        app:layout_constraintTop_toBottomOf="@id/tv_com2"/>

    <TextView
        android:id="@+id/tv_box33"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="G"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box32"
        app:layout_constraintTop_toBottomOf="@id/tv_com2"/>

    <TextView
        android:id="@+id/tv_box34"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_key"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="U"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box33"
        app:layout_constraintTop_toBottomOf="@id/tv_com2"/>

    <TextView
        android:id="@+id/tv_box35"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="E"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box34"
        app:layout_constraintTop_toBottomOf="@id/tv_com2"/>

    <TextView
        android:id="@+id/tv_com3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="The letter U is not in the word in any spot."
        android:textColor="@color/white"
        android:textSize="15dp"

        app:layout_constraintTop_toBottomOf="@id/tv_box31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_box21"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"

        android:gravity="center"
        android:text="P"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_com1"/>

    <TextView
        android:id="@+id/tv_box22"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="I"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box21"
        app:layout_constraintTop_toBottomOf="@id/tv_com1"/>

    <TextView
        android:id="@+id/tv_box23"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="L"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box22"
        app:layout_constraintTop_toBottomOf="@id/tv_com1"/>

    <TextView
        android:id="@+id/tv_box24"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="L"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box23"
        app:layout_constraintTop_toBottomOf="@id/tv_com1"/>

    <TextView
        android:id="@+id/tv_box25"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_word"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"

        android:gravity="center"
        android:text="S"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/tv_box24"
        app:layout_constraintTop_toBottomOf="@id/tv_com1"/>

    <TextView
        android:id="@+id/tv_com2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="The letter I is in the word but in the wrong spot."
        android:textColor="@color/white"
        android:textSize="15dp"

        app:layout_constraintTop_toBottomOf="@id/tv_box21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:layout_marginBottom="15dp"

        android:background="#484C49"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_ins4" />

    <TextView
        android:id="@+id/tv_ins4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:text="Suggested to guess 1 word daily"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>